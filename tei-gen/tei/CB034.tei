  <text>
    <body>
      <div type="poem">
        <lg type="strophe" n="I">
          <l n="1">
            <w>Deduc</w>
            <pc resp="#editor">,</pc>
            <w>Syon</w>
            <pc resp="#editor">,</pc>
            <w>uberrimas</w>
          </l>
          <l n="2">
            <w>Velut</w>
            <w>torrentem</w>
            <w>lacrimas</w>
            <pc resp="#editor">!</pc>
          </l>
          <l n="3">
            <w>Nam</w>
            <w>qui</w>
            <w>pro</w>
            <w>tuis</w>
            <w>patribus</w>
          </l>
          <l n="4">
            <w>Nati</w>
            <w>sunt</w>
            <w>tibi</w>
            <w>filii</w>
            <pc resp="#editor">,</pc>
          </l>
          <l n="5">
            <w>Quorum</w>
            <w>dedisti</w>
            <w>manibus</w>
          </l>
          <l n="6">
            <w>Tui</w>
            <w>sceptrum</w>
            <w>imperii</w>
            <pc resp="#editor">,</pc>
          </l>
          <l n="7">
            <w>Fures</w>
            <w>et</w>
            <w>furum</w>
            <w>socii</w>
            <pc resp="#editor">.</pc>
          </l>
          <l n="8">
            <w>Turbato</w>
            <w>rerum</w>
            <w>ordine</w>
          </l>
          <l n="9">
            <w>Abutuntur</w>
            <w>regimine</w>
          </l>
          <l n="10">
            <w>Pastoralis</w>
            <w>officii</w>
            <pc resp="#editor">.</pc>
          </l>
        </lg>
        <lg type="strophe" n="II">
          <l n="1">
            <w>Ad</w>
            <w>corpus</w>
            <w>infirmitas</w>
          </l>
          <l n="2">
            <w>Capitis</w>
            <w>descendit</w>
            <pc resp="#editor">,</pc>
          </l>
          <l n="3">
            <w>Singulosque</w>
            <w>gravitas</w>
          </l>
          <l n="4">
            <w>Artus</w>
            <w>apprehendit</w>
            <pc resp="#editor">,</pc>
          </l>
          <l n="5">
            <w>Refrigescit</w>
            <w>caritas</w>
            <pc resp="#editor">,</pc>
          </l>
          <l n="6">
            <w>Nec</w>
            <w>iam</w>
            <w>se</w>
            <w>extendit</w>
          </l>
          <l n="7">
            <w>Ad</w>
            <w>amorem</w>
            <w>proximi</w>
            <pc resp="#editor">;</pc>
          </l>
          <l n="8">
            <w>Nam</w>
            <w>videmus</w>
            <w>opprimi</w>
          </l>
          <l n="9">
            <w>Pupilum</w>
            <w>a</w>
            <w>potente</w>
            <pc resp="#editor">,</pc>
          </l>
          <l n="10">
            <w>Nec</w>
            <w>est</w>
            <w>qui</w>
            <w>salvum</w>
            <w>faciat</w>
          </l>
          <l n="11">
            <w>Vel</w>
            <w>qui</w>
            <w>iustum</w>
            <w>eripiat</w>
          </l>
          <l n="12">
            <w>Ab</w>
            <w>impio</w>
            <w>premente</w>
            <pc resp="#editor">.</pc>
          </l>
        </lg>
        <lg type="strophe" n="III">
          <l n="1">
            <w>Vide</w>
            <pc resp="#editor">,</pc>
            <w>Deus</w>
            <w>ultionum</w>
            <pc resp="#editor">,</pc>
          </l>
          <l n="2">
            <w>Vide</w>
            <pc resp="#editor">,</pc>
            <w>videns</w>
            <w>omnia</w>
            <pc resp="#editor">,</pc>
          </l>
          <l n="3">
            <w>Quod</w>
            <w>spelunca</w>
            <w>vispillonum</w>
          </l>
          <l n="4">
            <w>Facta</w>
            <w>est</w>
            <w>Ecclesia</w>
            <pc resp="#editor">,</pc>
          </l>
          <l n="5">
            <w>Quod</w>
            <w>in</w>
            <w>templum</w>
            <w>Salomonis</w>
          </l>
          <l n="6">
            <w>Venit</w>
            <w>princeps</w>
            <w>Babylonis</w>
          </l>
          <l n="7">
            <w>Et</w>
            <w>excelsum</w>
            <w>sibi</w>
            <w>thronum</w>
          </l>
          <l n="8">
            <w>Posuit</w>
            <w>in</w>
            <w>medio</w>
            <pc resp="#editor">!</pc>
          </l>
          <l n="9">
            <w>Sed</w>
            <w>arrepto</w>
            <w>gladio</w>
          </l>
          <l n="10">
            <w>Scelus</w>
            <w>hoc</w>
            <w>ulciscere</w>
            <pc resp="#editor">!</pc>
          </l>
          <l n="11">
            <w>Veni</w>
            <pc resp="#editor">,</pc>
            <w>iudex</w>
            <w>gentium</w>
            <pc resp="#editor">,</pc>
          </l>
          <l n="12">
            <w>Cathedras</w>
            <w>vendentium</w>
          </l>
          <l n="13">
            <w>Columbas</w>
            <w>evertere</w>
            <pc resp="#editor">!</pc>
          </l>
        </lg>
      </div>
    </body>
